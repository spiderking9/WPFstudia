<UserControl x:Class="UrlopyApiXaml.Views.Listy.ListaWnioskowUrlopowychView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UrlopyApiXaml.Views.Listy"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!--<ResourceDictionary Source="/Content/Styles/GrafikPracy.xaml"  />-->
    </UserControl.Resources>

    <Grid>
        <DataGrid Grid.Row="3" ItemsSource="{Binding List}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lp" Binding="{Binding WUR_WurID}"/>
                <DataGridTextColumn Header="Pracownik Id" Binding="{Binding WUR_DataOd}"/>
                <DataGridTextColumn Header="Dzien" Binding="{Binding WUR_DataDo}"/>
                <DataGridTextColumn Header="Zmiana" Binding="{Binding NazwaPracownika}"/>
                <DataGridTextColumn Header="Zmiana" Binding="{Binding RodzajUrlopu}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
