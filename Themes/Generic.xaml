<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:UrlopyApiXaml.Views">


    <Style TargetType="{x:Type local:Filtrowanie1ViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Filtrowanie1ViewBase}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                        <Style.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="5" />
                                            </Style>
                                            <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                <VisualBrush.Visual>
                                                    <Label Content="Filtrowanie" Foreground="LightGray"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Style.Resources>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                                <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="White" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="2" Background="{DynamicResource gradientBrushSegmentedTabItem}" Content="Pokaz Pracownika" Foreground="White" FontSize="20">
                            </Button>
                        </Grid>
                        <ContentPresenter Grid.Row="1" />
                    </Grid>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:DodajUsunEdytujOdswiezViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DodajUsunEdytujOdswiezViewBase}">
                    <Grid VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <ContentPresenter Grid.Row="0" Margin="0,5,0,5"/>

                        <Button Grid.Row="1" Command="{Binding  DodajCommand}" Background="Blue" Content="Dodaj Zdarzenie" Foreground="White" FontSize="20" MaxWidth="640"/>
                        <Button Grid.Row="2" Command="{Binding  EditCommand}" Background="MediumBlue" Content="Edytuj Zdarzenie" Foreground="White" FontSize="20" MaxWidth="640"/>
                        <Button Grid.Row="3" Command="{Binding  DelCommand}" Background="Blue" Content="Usun Zdarzenie" Foreground="White" FontSize="20" MaxWidth="640"/>
                        <Button Grid.Row="4" Command="{Binding  LoadCommand}" Background="MediumBlue" Content="Odswiez" Foreground="White" FontSize="20" MaxWidth="640"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
